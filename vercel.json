{
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "data/database.db"
    },
    "api/health.ts": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" },
    { "source": "/health", "destination": "/api/health" },
    { "source": "/version", "destination": "/api/health" }
  ]
}
